<phpunit backupGlobals="false"
		 backupStaticAttributes="false"
		 colors="true"
		 convertErrorsToExceptions="true"
		 convertNoticesToExceptions="true"
		 convertWarningsToExceptions="true"
		 processIsolation="false"
		 stopOnFailure="true"
		 syntaxCheck="false"
		 bootstrap="../Phalcon/Tests/Bootstrap.php"
		>

	<php>
		<var name="db_type" value="pdo_mysql"/>
		<var name="db_host" value="localhost" />
		<var name="db_username" value="travis" />
		<var name="db_password" value="" />
		<var name="db_name" value="phalcon_orm_test" />
		<var name="db_port" value="3306"/>
	</php>

	<testsuites>
		<testsuite name="Phalcon DBAL Test Suite">
			<directory>../Phalcon/Tests/DBAL</directory>
		</testsuite>
		<testsuite name="Phalcon ORM Test Suite">
			<directory>../Phalcon/Tests/ORM</directory>
		</testsuite>
	</testsuites>
